        <div class="form-group">
          <textarea name="details" class="form-control" placeholder="Detalles (opcional)"></textarea>
        </div>
        <div class="form-group">
          <button  href="/samples/new-sample" class="btn btn-primary btn-block" type="submit">
            Save
