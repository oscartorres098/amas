{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}
<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Editar meustra</h3>
    </div>
    <div class="card-body">
      <form action="/samples/edit-sample/{{sample._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <textarea class="form-control rounded-0" name="espectro" rows="10" >{{sample.espectro}}</textarea>
        </div>
        <div class="form-check" align="left" style="margin-bottom: 25px;">
          <input type="checkbox" name="check" id="check" value="1" onchange="javascript:showContent()" {{#if sample.labels}} checked {{/if}}/>
          <label class="form-check-label" style="font-weight: bold;" for="exampleCheck1">Agregar etiquetas</label>
        </div>
        <div id="content">
        <div class="form-group">
          <input type="text" name="MOx" class="form-control" value="{{sample.labels.[0]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="COx" class="form-control" value="{{sample.labels.[1]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Arena" class="form-control" value="{{sample.labels.[2]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Arcilla" class="form-control" value="{{sample.labels.[3]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Limo" class="form-control" value="{{sample.labels.[4]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="CLASE_TEXTURAL" class="form-control" value="{{sample.labels.[5]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="HUMEDAD_GRAVIMETRICA" class="form-control" value="{{sample.labels.[6]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Dr" class="form-control"  value="{{sample.labels.[7]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="pH" class="form-control"  value="{{sample.labels.[8]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Ca" class="form-control"  value="{{sample.labels.[9]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Mg" class="form-control"  value="{{sample.labels.[10]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="K" class="form-control" value="{{sample.labels.[11]}}" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="Na" class="form-control" value="{{sample.labels.[12]}}" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="details" class="form-control" />{{sample.detail}}</textarea>
        </div>
        </div>
        {{#if sample.labels}} {{else}}
        <script>
        element = document.getElementById("content");
        element.style.display='none';
        </script>
        {{/if}}
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
