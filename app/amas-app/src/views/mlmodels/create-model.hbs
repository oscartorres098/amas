<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Crear modelo
      </div>
      <div class="card-body">
        <form action="/models/new-model" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre del modelo" value="">
          </div>
          <div class="form-group">
            <select name="scaler" class="form-control">
              <option value="minmax">Minimos y maximos</option>
              <option value="standard">Estandar</option>
            </select>
          </div>
          <div class="form-group">
            <select name="preprocessing" class="form-control">
              <option value="dct">Transformada de Coseno directa</option>
              <option value="fft">Transformada de rapida de Fourier</option>
              <option value="dwt">Transformada de discreta de Wavelet</option>
            </select>
          </div>
          <div class="form-group">
            <select name="model" class="form-control">
              <option value="svr">Maquinas de vectores de soporte</option>
              <option value="mlp">Redes neuronales</option>
              <option value="linear">Regresi√≥n lineal</option>
            </select>
          </div>
           <div class="form-check" align="left" style="margin-bottom: 25px;">
          <input type="checkbox" name="check" id="check" value="1" onchange="javascript:showContent()" />
          <label class="form-check-label" style="font-weight: bold;" for="exampleCheck1">Usar derivada y segunda derivada</label>
          </div>
          <button class="btn btn-primary btn-block">
            Entrenar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
